- if healthmonitor.blank?
  %table.table.datatable
    %thead
    %tbody
      %tr
        %td
          No Healthmonitor defined
- else
  %table.table.datatable
    %thead
    %tbody
      %tr
        %th Name/ID
        %td= name_or_id(healthmonitor.name, healthmonitor.id)
      %tr
        %th Type
        %td= healthmonitor.type
      %tr
        %th Max Retries
        %td= healthmonitor.max_retries
      %tr
        %th Timeout
        %td= healthmonitor.timeout
      %tr
        %th Delays
        %td= healthmonitor.delay
      - if healthmonitor.http_type?
        %tr
          %th HTTP Method
          %td= healthmonitor.http_method
        %tr
          %th URL Path
          %td= description(healthmonitor.url_path, 40)
        %tr
          %th Expected Codes
          %td= healthmonitor.expected_codes
