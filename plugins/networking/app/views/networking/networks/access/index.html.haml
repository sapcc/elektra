= content_for :title do
  Role Based Access Control

%div{class: modal? ? 'modal-body' : ''}
  %table.table#rbacs
    %thead
      %tr
        %th.snug Action
        %th ID
        %th Target Project
        %th.snug
    %tbody
      - if @rbacs.length == 0
        %tr
          %td{colspan: 5} No Access given to other projects
      - else
        - @rbacs.each do | rbac |
          = render partial: 'rbac_item', locals: {rbac: rbac, network: @network}

      - if current_user.is_allowed?("networking:rbac_policy_create",{tenant_id:@scoped_project_id, network: @network})
        = render partial: 'networking/networks/access/new_rbac_form'


%div.buttons{class: modal? ? 'modal-footer' : ''}
  - if modal?
    %button.btn.btn-default{type:"button", data: {dismiss:"modal"}, aria: {label: "Cancel"}} Cancel
  - else
    = link_to "Cancel", plugin('networking').send("networks_#{@network_type}_index_url"), class: 'btn btn-default'
