= f.input :payload_content_type, required: true, label: 'Payload Content Type', collection: payload_content_types, selected: 1, input_html: {data: {encoding_relation: payload_encoding_relation, toggle: 'secretPayloadTypeSwitcher'}}

.js-secret-encoding{class: ('hide' if payload_encoding_relation[selected_payload_content_type.to_sym].nil?)}
  = f.input :payload_content_encoding, required: true, readonly: true, label: 'Payload Content Encoding', input_html: {value: ::KeyManager::Secret::Encoding::BASE64},
            icon_hint: t('key_manager.form.new.icon_hint.payload_content_encoding'), disabled: (true if payload_encoding_relation[selected_payload_content_type.to_sym].nil?)