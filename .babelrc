// corejs 3: https://github.com/zloirock/core-js/blob/master/docs/2019-03-19-core-js-3-babel-and-a-look-into-the-future.md#babelpreset-env
{
  "env": {
    "development": {
      "presets": [
        [
          "@babel/preset-env",
          {
            "corejs": "3",
            "modules": false,
            "targets": {
              "browsers": "> 0.1%",
              "ie": "10"
            },
            "forceAllTransforms": true,
            "useBuiltIns": "entry"
          }
        ],
        "@babel/preset-react"
      ],
      "plugins": [
        "react-require",
        "@babel/plugin-proposal-object-rest-spread",
        [
          "@babel/plugin-proposal-class-properties",
          {
            "spec": true
          }
        ]
      ]
    },
    "production": {
      "presets": [
        [
          "@babel/preset-env",
          {
            "corejs": "3",
            "modules": false,
            "targets": {
              "browsers": "> 0.1%",
              "ie": "10"
            },
            "forceAllTransforms": true,
            "useBuiltIns": "entry"
          }
        ],
        "@babel/preset-react"
      ],
      "plugins": [
        "react-require",
        "@babel/plugin-proposal-object-rest-spread",
        [
          "@babel/plugin-proposal-class-properties",
          {
            "spec": true
          }
        ]
      ]
    },
    "test": {
      "presets": [
        [
          "@babel/preset-env",
          {
            "targets": {
              "node": "current"
            }
          }
        ],
        "@babel/preset-react"
      ],
      "plugins": [
        "react-require",
        "@babel/plugin-proposal-object-rest-spread",
        [
          "@babel/plugin-proposal-class-properties",
          {
            "spec": true
          }
        ]
      ]
    }
  }
}
